    <None Include="bin\Debug\netcoreapp2.1\publish\KnightArcade.Views.pdb" />
    <None Include="bin\Debug\netcoreapp2.1\publish\Newtonsoft.Json.dll" />
    <None Include="bin\Debug\netcoreapp2.1\publish\React.Web.dll" />
    <None Include="bin\Debug\netcoreapp2.1\publish\React.Web.Mvc4.dll" />
    <None Include="bin\Debug\netcoreapp2.1\publish\web.config" />
