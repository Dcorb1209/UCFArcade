    <Content Include="bin\Debug\netcoreapp2.1\publish\appsettings.Development.json" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\appsettings.json" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\asset-manifest.json" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\favicon.ico" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\index.html" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\manifest.json" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\css\main.d4e966ff.chunk.css" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\media\arcade.3dff0d44.png" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\media\avatarTest.2e47e37a.png" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\media\workers2.3c50a148.png" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\KnightArcade.deps.json" />
    <Content Include="bin\Debug\netcoreapp2.1\publish\KnightArcade.runtimeconfig.json" />
    <Content Include="bin\Release\netcoreapp2.1\KnightArcade.deps.json" />
    <Content Include="bin\Release\netcoreapp2.1\KnightArcade.runtimeconfig.dev.json" />
    <Content Include="bin\Release\netcoreapp2.1\KnightArcade.runtimeconfig.json" />
  </ItemGroup>

  <ItemGroup>
    <None Include="bin\Debug\netcoreapp2.1\KnightArcade.dll" />
    <None Include="bin\Debug\netcoreapp2.1\KnightArcade.pdb" />
    <None Include="bin\Debug\netcoreapp2.1\KnightArcade.Views.dll" />
    <None Include="bin\Debug\netcoreapp2.1\KnightArcade.Views.pdb" />
    <None Include="bin\Debug\netcoreapp2.1\publish\AWSSDK.Core.dll" />
    <None Include="bin\Debug\netcoreapp2.1\publish\AWSSDK.S3.dll" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\precache-manifest.1152ee42c4f53acfe90b754d8565ab1e.js" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\service-worker.js" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\css\main.d4e966ff.chunk.css.map" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\js\1.d6b2b116.chunk.js" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\js\1.d6b2b116.chunk.js.map" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\js\main.f5cd539b.chunk.js" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\js\main.f5cd539b.chunk.js.map" />
    <None Include="bin\Debug\netcoreapp2.1\publish\ClientApp\build\static\js\runtime~main.229c360f.js" />
